clean:
	rm -f *.log
	make -C line-planning clean
	make -C timetabling clean
	make -C graphics clean
	make -C delay-management clean
	make -C vehicle-scheduling clean

all-clean:
	make clean
	make clean-src

clean-src:
	${SRC_DIR}/clean.py
